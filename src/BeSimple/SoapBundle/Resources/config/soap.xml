<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="besimple.soap.cache.class">BeSimple\SoapCommon\Cache</parameter>
        <parameter key="besimple.soap.cache.dir">%kernel.cache_dir%/besimple/soap</parameter>
    </parameters>

    <services>
        <service id="besimple.soap.cache" class="%besimple.soap.cache.class%">
            <call method="setEnabled">
                <argument>%besimple.soap.cache.enabled%</argument>
            </call>
            <call method="setDirectory">
                <argument>%besimple.soap.cache.dir%</argument>
            </call>
            <call method="setLifetime">
                <argument>%besimple.soap.cache.lifetime%</argument>
            </call>
        </service>
    </services>

</container>
